<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list"
    tools:context="com.example.sapriom.calculatorallinone.ListMainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Normal Calculator"
        android:id="@+id/calculator"
        android:textColor="#fff"
        android:elevation="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttondesign"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculator"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttondesign"
        android:text="CGPA Calculator"
        android:id="@+id/cgpa"
        android:textColor="#fff"
        android:elevation="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cgpa"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/buttondesign"
        android:text="Semester Fee Calculator"
        android:id="@+id/fee"
        android:textColor="#fff"
        android:elevation="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fee"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttondesign"
        android:text="BMI Calculator"
        android:id="@+id/c1"
        android:textColor="#fff"
        android:elevation="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/buttondesign"
        android:text="Triangle Area Calculator"
        android:id="@+id/c2"
        android:textColor="#fff"
        android:elevation="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c2"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttondesign"
        android:text="Square and Rectangular Area"
        android:id="@+id/c3"
        android:textColor="#fff"
        android:elevation="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/buttondesign"
        android:text="Cylinder Area Calculator"
        android:id="@+id/c4"
        android:textColor="#fff"
        android:elevation="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c4"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttondesign"
        android:text="Get in "
        android:id="@+id/c5"
        android:textColor="#fff"
        android:elevation="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c5"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/buttondesign"
        android:text="Back"
        android:id="@+id/c6"
        android:textColor="#fff"
        android:elevation="20dp" />

</RelativeLayout>
