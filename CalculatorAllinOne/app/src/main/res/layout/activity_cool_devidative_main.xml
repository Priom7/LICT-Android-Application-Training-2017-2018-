<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bmi"
    android:orientation="vertical"
    tools:context="com.example.sapriom.calculatorallinone.CoolDevidativeMainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Weight"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginLeft="40dp"
        android:hint="0"
        android:id="@+id/weight"
        android:gravity="center"
        android:textColorHint="#000"
        android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Height"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:id="@+id/height"
        android:background="#fff"
        android:hint="0"
        android:textColorHint="#000"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:textSize="30dp"
            android:text="BMI = "
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginEnd="73dp"
            android:textSize="30dp"
            android:textColor="#fff"
            android:layout_marginRight="73dp"
            android:text="0" />

        <Button
            android:id="@+id/resultbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Result" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/result"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/result"
            android:text="Back" />
    </RelativeLayout>

</LinearLayout>
